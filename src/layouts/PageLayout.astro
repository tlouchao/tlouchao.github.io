---
import BaseHead from '../components/BaseHead.astro';
import NavBar from '../components/NavBar.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

import { ViewTransitions } from "astro:transitions";
import { SITE_TITLE, SITE_DESCRIPTION} from '../consts';

import '@fontsource/oxygen';
import '@fontsource/roboto';

import { getLabel } from '../scripts/utils';

let { pathname } = Astro.url;
const {frontmatter} = Astro.props;

const header = getLabel(pathname);
const headerImgSrc = frontmatter?.headerImgSrc ?? '/freljord_splash.jpg';

---

<!doctype html>
<html lang="en"> <!--transition:animate="none">-->
	<head>
        <ViewTransitions />
		<BaseHead title={SITE_TITLE}
                  description={SITE_DESCRIPTION}  
                  transition:persist/>
	</head>
	<body class="theme-dark">
        <NavBar />
        <div id="header-layout">
            <Header header={header} headerImgSrc={headerImgSrc} />
            <div id="main-layout">
                <main>
                    <slot />
                </main>
                <aside>
                    <ul>
                        <li>Bio</li>
                        <li>Resources</li>
                        <li>About This Website</li>
                    </ul>
                </aside>
            </div>
            <Footer />
        </div>
    </body>
</html>

<style>
    /* MOBILE */
    #header-layout {
        display: flex;
        flex-direction: column;
        padding-left: 0;
        padding-right: 0;
        margin-top: var(--nav-mobile-wh);
        height: calc(100vh - var(--nav-mobile-wh));
    }
    #main-layout {
        display: flex;
        flex-direction: column;
        flex-grow: 1;
        width: 100%;
    }
    main {
        box-sizing: border-box;
        padding: 1em;
        width: min(100%, var(--main-max-width));
    }
    aside {
        display: none;
    }
    /* DESKTOP */
	@media (min-width: 992px) {
        #header-layout {
            padding-left: min(22.5%, var(--nav-desktop-width));
            margin-top: 0;
            height: 100vh;
        }
        main {
            padding: 2em;
        }
    }
    @media (min-width: 1280px) {
        body {
            overflow-x: hidden;
        }
        #main-layout {
            display: grid;
            grid-template-columns: calc(1280px - var(--nav-desktop-width)) 360px;
        }
        aside {
            display: block;
            width: 360px;
            padding: 2em 1em;
            border: 1px solid black;
            ul {
                list-style-type: none;
                margin: 0;
                padding: 0;
            }
        }
    }
    @media (min-width: 1640px) {
        #main-layout {
            justify-content: center;
        }
    }
    
</style>
