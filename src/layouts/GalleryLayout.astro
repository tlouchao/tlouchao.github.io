---
import BaseHead from '../components/BaseHead.astro';
import NavBar from '../components/NavBar.astro';
import GalleryBar from '../components/GalleryBar.astro';
import Footer from '../components/Footer.astro';

import { ViewTransitions } from "astro:transitions";
import { SITE_TITLE, SITE_DESCRIPTION} from '../consts';

import '@fontsource/oxygen';
import '@fontsource/roboto';

import { getLabel } from '../scripts/utils';

interface Props {
  header?: string;
}

let { pathname } = Astro.url;
let { header = getLabel(pathname) } = Astro.props;

---

<!doctype html>
<html lang="en"> <!--transition:animate="none">-->
	<head>
        <ViewTransitions />
		<BaseHead title={SITE_TITLE} 
                  description={SITE_DESCRIPTION}  
                  transition:persist/>
	</head>
	<body class="theme-dark">
        <NavBar />
        <div id="header-layout">
            <GalleryBar header={header} />
            <div id="main-layout">
                <main>
                    <slot />
                </main>
            </div>
            <Footer />
        </div>
    </body>
</html>

<style>
    /* MOBILE */
    #header-layout {
        display: flex;
        flex-direction: column;
        padding-left: 0;
        padding-right: 0;
        margin-top: var(--nav-mobile-wh);
        height: calc(100vh - var(--nav-mobile-wh));
    }
    #main-layout {
        display: flex;
        flex-grow: 1;
        width: 100%;
    }
    main {
        padding: 0em;
        width: 100%;
        height: 100%;
    }
    /* DESKTOP */
	@media (min-width: 768px) {
        #header-layout {
            padding-left: min(25%, var(--nav-desktop-width));
            margin-top: 0;
            height: 100vh;
        }
    }   
</style>
