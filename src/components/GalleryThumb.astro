---
import { getLabel } from '../scripts/utils';

interface Props {
    src: string;
    label?: string;
}

let { src, label = '' } = Astro.props;
label = getLabel(label);

---
<img src={src} alt={label} aria-label={label} />

<style>
    img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        background-color: transparent;
    }
</style>
