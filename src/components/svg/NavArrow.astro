---
interface Props {
  isToggle?: boolean;
  isExpand?: boolean;
}
const { isToggle = false, isExpand = false } = Astro.props;
---
<svg data-toggle={isToggle}
     data-expand={isExpand} 
	 aria-hidden="true" 
	 xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24">
	 <path fill="none" 
	    stroke="currentColor" 
		stroke-linecap="round" 
		stroke-linejoin="round" 
		stroke-width="1.5" 
		d="m17 14l-5-5l-5 5" 
	 />
</svg>

<style>
	svg {
		display: none;
	}
	@media (min-width: 768px) {
		svg {
			display: inherit;
			visibility: hidden;
			color: inherit;
			/* color: var(--color-nav-link); */
			transform: rotate(90deg)
		}
		svg[data-toggle] {
			visibility: visible;
		}
		svg[data-expand] {
			transform: rotate(180deg);
		}
	}
</style>
