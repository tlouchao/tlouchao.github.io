---
interface Props {
    src?: string;
    alt?: string;
    srcs?: string[];
    alts?: string[];
    caption?: string;
    width?: number;
    height?: number;
}

const {src, alt, srcs, alts, caption, width, height} = Astro.props;
---
<div class="blog-image">
    <div class="blog-image-content" style={width ? "max-width: " + width + "px;" : ""}>
        {
            src
            ? <img src={src} alt={alt}/>
            : srcs?.map((_, idx) => (<img src={srcs?.[idx]} alt={alts?.[idx]}/>))
        }
        {caption && <p>*{caption}</p>}
    </div>
</div>

<style>
    .blog-image {
        display: flex;
        flex-direction: column;
        width: 100%;
        align-items: center;
    }
    .blog-image-content {
        display: inherit;
        flex-direction: inherit;
        gap: 1em;
    }
    p {
        font-size: x-small;
        font-style: italic;
        margin-block-start: -1em;
        margin-block-end: 0.5em;
    }
</style>