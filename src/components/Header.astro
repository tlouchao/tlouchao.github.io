---
interface Props {
    header: string;
    headerImgSrc: string;
}

const { header, headerImgSrc } = Astro.props;

---

<header>
    <h1>{header}</h1>
    <img src={headerImgSrc} aria-label="Header Image"/>
    <div class="header-gradient" />
</header>

<style>
    header {
        position: relative;
        width: 100%;
        height: var(--header-height);
        h1 {
            position: absolute;
            bottom: 0.5em;
            width: 100%;
            text-align: center;
            color: var(--color-header);
            z-index: 1;
        }
        img {
            width: 100%;
            height: var(--header-height);
            object-fit: cover;
            object-position: left;
        }
        .header-gradient {
            position: absolute;
            bottom: 0;
            width: 100%;
            height: var(--header-height);
            box-shadow: inset 0em -80px 40px -40px black;
        }
    }
    /* DESKTOP */
	@media (min-width: 768px) {
        header {
            h1 {
                left: 1em;
                width: calc(100% - 1em);
                text-align: left;
            }
        }
    }
</style>
