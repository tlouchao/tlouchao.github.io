---
import { Icon } from 'astro-icon/components'

interface Props {
    href: string;
    name: string;
}

let {href, name}  = Astro.props;
---

<button-social>
    <span class="sr-only">{name + " Button"}</span>
    <button>
        <a href={href ? href : '#'}>
            <Icon name={name} />
        </a>
    </button>
</button-social>

<style>
    button {
        display: flex;
        align-items: center;
        width: 24px;
        height: 24px;
        padding: 0.25em;
        transition: color .25s ease;
        color: var(--color-nav-social);
        background-color: transparent;
    }
    button:hover {
        color: var(--color-nav-social-hover);
    }
    a {
        line-height: 0;
        color: inherit;
    }
    svg {
        width: 100%;
        height: 100%;
    }
</style>